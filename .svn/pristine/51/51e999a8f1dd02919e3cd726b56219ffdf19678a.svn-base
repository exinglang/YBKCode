<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/tab_title_bar_red_bg">

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/top_icon_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="手机邮币卡"
            android:textColor="@android:color/white"
            android:textSize="?attr/large" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/home_title_btn_search"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:src="@drawable/scene1"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        android:padding="@dimen/large_padding">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/home_logo" />

        <TextView
            android:id="@+id/tv_zixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_logo"
            android:drawableLeft="@drawable/home_mystock"
            android:drawablePadding="@dimen/common_padding"
            android:gravity="center_vertical"
            android:text="自选"
            android:textSize="?attr/middle"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_hangqin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_zixuan"
            android:layout_marginLeft="80dip"
            android:layout_toRightOf="@id/img_logo"
            android:drawableLeft="@drawable/home_marketindex"
            android:drawablePadding="@dimen/common_padding"
            android:gravity="center_vertical"
            android:text="行情"
            android:textSize="?attr/middle" />

        <TextView
            android:id="@+id/tv_jiaoyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hangqin"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="50dip"
            android:layout_toRightOf="@id/img_logo"
            android:drawableLeft="@drawable/home_trade"
            android:drawablePadding="@dimen/common_padding"
            android:gravity="center_vertical"
            android:text="交易"
            android:textSize="?attr/middle" />

    </RelativeLayout>
</LinearLayout>
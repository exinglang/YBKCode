<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:ignore="HardcodedText"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/tab_title_bar_red_bg"
        >
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/home_title_btn_back"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品1"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/home_title_btn_search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@null"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_zuixinjia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="61.05"
                android:textColor="@color/hangqing_red_text"
                android:gravity="center"
                android:textSize="24dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_zhangfu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="2.31"
                    android:gravity="center"
                    android:textColor="@color/hangqing_red_text"
                    />
                <TextView
                    android:id="@+id/tv_zhangfu_p"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="2.11%"
                    android:gravity="center"
                    android:textColor="@color/hangqing_red_text"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/hangqing_detail_top_price"
                    android:text="昨收"
                    />
                <TextView
                    android:id="@+id/tv_zuoshou"
                    style="@style/hangqing_detail_top_price"
                    android:text="56.7"
                    android:textColor="@color/hangqing_white_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/hangqing_detail_top_price"
                    android:text="最高"

                    />
                <TextView
                    android:id="@+id/tv_zuigao"
                    style="@style/hangqing_detail_top_price"
                    android:text="56.7"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/hangqing_detail_top_price"
                    android:text="换手"
                    />
                <TextView
                    android:id="@+id/tv_huanshou"
                    style="@style/hangqing_detail_top_price"
                    android:text="56.7"
                    android:textColor="@color/hangqing_yellow_text"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/hangqing_detail_top_price"
                    android:text="今开"
                    />
                <TextView
                    android:id="@+id/tv_jinkai"
                    style="@style/hangqing_detail_top_price"
                    android:text="56.7"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/hangqing_detail_top_price"
                    android:text="最低"
                    />
                <TextView
                    android:id="@+id/tv_zuidi"
                    style="@style/hangqing_detail_top_price"
                    android:text="56.7"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/hangqing_detail_top_price"
                    android:text="总手"
                    />
                <TextView
                    android:id="@+id/tv_zongshou"
                    style="@style/hangqing_detail_top_price"
                    android:text="56.7"
                    android:textColor="@color/hangqing_yellow_text"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            >
            <ImageView
                android:id="@+id/iv_dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_dot_light"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:id="@+id/iv_dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_dot_dark"
                android:layout_marginRight="8dp"
                />
            <ImageView
                android:id="@+id/iv_dot3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_dot_dark"
                android:layout_marginRight="8dp"
                />


        </LinearLayout>
    </LinearLayout>

    <View android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#251f21"
        >
        <Button
            android:id="@+id/btn_zixuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:background="@drawable/s_round_bord"
            android:text="添加自选"
            android:textSize="12dp"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:minHeight="0dp"
                android:background="@drawable/hangqing_btn_buy_selector"
                android:text="买"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@android:color/white"
                />
            <Button
                android:id="@+id/btn_sell"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:minHeight="0dp"
                android:background="@drawable/hangqing_btn_sell_selector"
                android:text="卖"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@android:color/white"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>